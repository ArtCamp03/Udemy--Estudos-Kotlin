<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_title"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:background="@color/fundo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="@id/view_title"
        app:layout_constraintTop_toTopOf="@id/view_title"
        app:tint="#fff" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cappuccino"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/view_title"
        app:layout_constraintEnd_toEndOf="@id/view_title"
        app:layout_constraintStart_toStartOf="@id/view_title"
        app:layout_constraintTop_toTopOf="@id/view_title" />

    <ImageView
        android:id="@+id/image_time"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/ic_access_time"
        app:layout_constraintEnd_toStartOf="@id/image_favorite"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_title" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutos"
        app:layout_constraintEnd_toStartOf="@id/text_favorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_time" />

    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_time"
        app:layout_constraintTop_toBottomOf="@id/view_title" />

    <TextView
        android:id="@+id/text_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15456"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_time"
        app:layout_constraintTop_toBottomOf="@id/image_favorite" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_time" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="O melhor cafe defumado da cidade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line" />

    <TextView
        android:id="@+id/text_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Ingredientes"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_description" />

    <ImageView
        android:id="@+id/image_ingredient_1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ingredient"
        app:layout_constraintEnd_toStartOf="@id/text_ingredient_1"
        android:tint="@color/black"
        android:src="@drawable/ic_baseline_chevron_right_24"
        />

    <TextView
        android:id="@+id/text_ingredient_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cappuccino de chocolate"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@id/image_ingredient_1"
        app:layout_constraintTop_toBottomOf="@id/text_ingredient"
        />

    <ImageView
        android:id="@+id/image_ingredient_2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ingredient_1"
        app:layout_constraintEnd_toStartOf="@id/text_ingredient_2"
        android:tint="@color/black"
        android:src="@drawable/ic_baseline_chevron_right_24"
        />

    <TextView
        android:id="@+id/text_ingredient_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cappuccino de Balnilha"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textSize="26sp"
        app:layout_constraintStart_toEndOf="@id/image_ingredient_1"
        app:layout_constraintTop_toBottomOf="@id/text_ingredient_1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>