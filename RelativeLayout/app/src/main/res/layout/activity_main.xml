<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/text_distance"
        android:layout_below="@id/edit_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total de kms"
        />

    <EditText
        android:id="@+id/edit_price"
        android:layout_below="@id/text_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/text_price"
        android:layout_below="@id/edit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preço por Litro"
        />

    <EditText
        android:id="@+id/edit_autonomy"
        android:layout_below="@id/text_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_autonomy"
        android:layout_below="@id/edit_autonomy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Preço por Litro"
        />

    <TextView
        android:id="@+id/text_total_expand"
        android:layout_below="@id/text_autonomy"
        android:layout_width="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Seu gasto total sera de :"
        />

    <TextView
        android:id="@+id/text_total_value"
        android:layout_below="@id/text_total_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="R$ 0"
        />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_total_value"
        android:layout_marginTop="32dp"
        android:text="calcular"
        />

</RelativeLayout>